<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<AnchorPane fx:id="MainAnchorPane" styleClass="background" stylesheets="@MainInterface.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="prototype.MainInterfaceController">
    <children>
        <VBox fx:id="MainVBox">
            <children>
                <AnchorPane fx:id="TopAnchorPane" prefHeight="120.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="Icon" fitHeight="60.0" fitWidth="60.0" layoutX="170.0" layoutY="30.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@TamakiIroha.jpeg"/>
                            </image>
                        </ImageView>
                        <Button id="TopMenuButton" fx:id="TopMenuButton" mnemonicParsing="false"
                                onAction="#onTopMenuButtonClick" prefHeight="25.0" prefWidth="60.0"
                                stylesheets="@MainInterface.css" text="菜单"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="MiddleAnchorPane" prefHeight="120.0" prefWidth="200.0">
                    <children>
                        <HBox fx:id="ModeSelectionHBox" layoutX="20.0" prefHeight="60.0" prefWidth="360.0">
                            <children>
                                <Label fx:id="ModeLabel" prefHeight="30.0" prefWidth="81.0" text="操作模式：">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="ModeChoice" value="Mode Choice" prefWidth="120.0"
                                           onAction="#onModeChoice"
                                           stylesheets="@MainInterface.css">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="自定义模式"/>
                                            <String fx:value="手动模式"/>
                                        </FXCollections>
                                    </items>
                                </ChoiceBox>
                            </children>
                        </HBox>
                        <HBox fx:id="ButtonHBox" layoutX="20.0" layoutY="60.0" prefHeight="60.0" prefWidth="360.0"
                              spacing="45.0">
                            <children>
                                <Button fx:id="ButtonLaunch" mnemonicParsing="false" stylesheets="@MainInterface.css"
                                        text="启动"/>
                                <Button fx:id="ButtonStop" mnemonicParsing="false" stylesheets="@MainInterface.css"
                                        text="暂停"/>
                                <Button fx:id="ButtonTerminate" mnemonicParsing="false" stylesheets="@MainInterface.css"
                                        text="终止"/>
                                <Button fx:id="ButtonReset" mnemonicParsing="false" stylesheets="@MainInterface.css"
                                        text="复位"/>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="BottomAnchorPane" prefHeight="360.0" prefWidth="200.0">
                    <children>
                        <ScrollPane fx:id="CustomScrollPane" layoutX="10.0" prefHeight="350.0" prefWidth="360.0">
                            <content>
                                <VBox fx:id="CustomVBox" prefHeight="400.0" prefWidth="340.0"/>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
